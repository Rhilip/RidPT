{
  "name": "rhilip/ridpt",
  "description": "基于 swoole 的Private Torrent源码",
  "type": "project",
  "keywords": [
    "swoole",
    "bittorrent",
    "private torrent"
  ],
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Rhilip",
      "email": "rhilipruan@gmail.com"
    }
  ],
  "version": "0.0.1",
  "require": {
    "php": ">=7.4.0",
    "ext-ctype": "*",
    "ext-curl": "*",
    "ext-gd": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "ext-pcntl": "*",
    "ext-pdo": "*",
    "ext-redis": "*",
    "ext-swoole": "*",
    "adhocore/cron-expr": "^1.1",
    "firebase/php-jwt": "^5.0",
    "league/event": "^2.2",
    "league/plates": "^3.3",
    "mjohnson/decoda": "^6.12",
    "monolog/monolog": "^2.0",
    "nesbot/carbon": "^2.30",
    "nikic/fast-route": "^1.3",
    "php-di/php-di": "^6.1",
    "phpmailer/phpmailer": "^6.0",
    "rhilip/bencode": "^1.0",
    "siriusphp/validation": "^2.3",
    "soundasleep/html2text": "^1.1",
    "symfony/config": "^5.1",
    "symfony/console": "^5.1",
    "symfony/dotenv": "^5.1",
    "symfony/http-foundation": "^5.1",
    "symfony/stopwatch": "^5.1",
    "symfony/translation": "^5.1",
    "symfony/validator": "^5.1"
  },
  "require-dev": {
    "swoole/ide-helper": "@dev"
  },
  "config": {
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "ext-swoole": "4.4.14",
      "ext-pcntl" : "7.4"
    }
  },
  "replace": {
    "symfony/polyfill-php54": "1.99",
    "symfony/polyfill-php55": "1.99",
    "symfony/polyfill-php56": "1.99",
    "symfony/polyfill-php70": "1.99",
    "symfony/polyfill-php71": "1.99",
    "symfony/polyfill-php72": "1.99",
    "symfony/polyfill-php73": "1.99",
    "symfony/polyfill-mbstring": "1.99",
    "symfony/polyfill-ctype": "1.99"
  },
  "autoload": {
    "psr-4": {
      "Rid\\": "framework/",
      "App\\": "application/"
    },
    "files": [
      "framework/functions.php"
    ]
  },
  "prefer-stable": true
}
